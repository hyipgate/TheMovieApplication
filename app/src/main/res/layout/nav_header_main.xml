<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/header_neavigation"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <TextView
        android:id="@+id/name"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Moviegallery"
        android:textColor="@color/book_content_color"
        android:fontFamily="@font/lato_bold_italic"
        android:paddingTop="@dimen/nav_header_vertical_spacing" />

    <TextView
        android:textSize="15dp"
        android:id="@+id/website"
        android:text="Read about Movies &amp; Tvshows"
        android:textColor="@color/black_opacity_color"
        android:fontFamily="@font/lato_italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>
