<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.a13877.themovieapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/moviedb_about"
        android:label="@string/app_name"
        android:roundIcon="@drawable/moviedb_about"
        android:supportsRtl="true"

        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.SplashScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/splashscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Activity.AboutApplication"
            android:parentActivityName=".Activity.MainActivity"
            android:screenOrientation="portrait">

        </activity>
        <activity android:name=".Activity.MovieDetailActivity"
            android:screenOrientation="portrait">

        </activity>


        <activity
            android:name=".Activity.SimilarTvShow"
            android:screenOrientation="portrait"> </activity>
        <activity
            android:name=".Activity.SimilarMovieslist"
            android:screenOrientation="portrait"> </activity>
        <activity
            android:name=".Activity.TvDetailActivity"
            android:screenOrientation="portrait"> </activity>
        <activity
            android:name=".Activity.TvSeasonDetails"
            android:screenOrientation="portrait"> </activity>

        <activity
            android:name=".Activity.MovieGenreList"
            android:screenOrientation="portrait"> </activity>

    </application>

</manifest>